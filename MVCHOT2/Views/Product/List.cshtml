@model List<Product>
@{
    ViewData["Title"] = "Product Manager";
}
<div class="container">
	<div class="mt-2">
		<h1 class="text-black">Product Manager</h1>
	</div>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Short Description</th>
				<th>Long Description</th>
				<th>Image</th>
				<th>Price</th>
				<th>Quantity</th>
				<th>Category</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model)
			{
					<tr>
						<td>@product.ProductName</td>
						<td>@product.ProductDescShort</td>
						<td>@product.ProductDescLong</td>
						<td>@product.ProductImage</td>
						<td>@product.ProductPrice.ToString("C")</td>
						<td>@product.ProductQty</td>
					
						
						<td><a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductID" asp-route-slug="@product.Slug" class="btn btn-primary">Edit</a></td>
						<td><a asp-controller="Product" asp-action="Delete" asp-route-id="@product.ProductID" asp-route-slug="@product.Slug" class="btn btn-primary">Delete</a></td>
					</tr>
					<input type="hidden" asp-for="@product.ProductID" />
			}
		</tbody>
	</table>
	<div class="mb-2">
		<a asp-controller="Product" asp-action="Add" class="btn btn-primary">Add Product</a>
	</div>
</div>
