@model Product
@{
	ViewBag.Title = "Delete Customer";
}

<div class="container">
	<div class="ms-2 mt-2">
		<h1>@ViewBag.Title</h1>
	</div>
	<p class="ms-3">Do you really want to delete @Model.ProductName?</p>
	<form asp-action="Delete" method="post">
		<input type="hidden" asp-for="ProductID" />
		<button type="submit" class="btn btn-primary ms-3">Yes</button>
		<a asp-controller="Product" asp-action="List" class="btn btn-primary">No</a>
	</form>
</div>